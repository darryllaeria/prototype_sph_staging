<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.proto.type.base.ui.widget.CircularImageView
        android:id="@+id/civAvatar"
        android:layout_width="@dimen/chat_avatar_size"
        android:layout_height="@dimen/chat_avatar_size"
        android:src="@drawable/ic_avatar_unknown"
        app:civ_border_width="@dimen/zero_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        style="@style/TextViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="clip_horizontal"
        android:singleLine="true"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@id/civAvatar"
        app:layout_constraintTop_toTopOf="@id/civAvatar"
        tools:text="User name" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_chat_item_left_first"
        android:padding="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/civAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvUserName">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llQuotedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0">

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/blue_link"
                android:paddingTop="@dimen/_10sdp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvQuotedSenderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:lines="1"
                    android:textColor="@color/blue_link"
                    android:textSize="@dimen/_13sdp"
                    tools:text="Duc Tran" />

                <TextView
                    android:id="@+id/tvQuotedMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="2"
                    android:textColor="@color/blue_link"
                    android:textSize="@dimen/_13sdp"
                    tools:text="Hello there! How are you a dfas dfsd fasd fasdf sdoing? sdjfasl hlfas" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/tvForwarded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_forwarded_grey"
            android:drawablePadding="@dimen/common_margin"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:text="@string/forwarded"
            android:textColor="@color/black_heading"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/tvUserName"
            app:layout_constraintTop_toBottomOf="@id/llReply"/>

        <TextView
            android:id="@+id/tvMessageReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_heading"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintHorizontal_bias="0"
            tools:text="I played re.I played red . Sic!" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tvDate"
        style="@style/TextViewChatSubTitle"
        android:textSize="@dimen/text_size_l1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_inbox_date"
        app:layout_constraintTop_toBottomOf="@id/llReply"
        app:layout_constraintStart_toEndOf="@id/civAvatar"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        tools:text="2 Days Ago" />

</androidx.constraintlayout.widget.ConstraintLayout>