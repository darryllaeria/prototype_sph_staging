<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/layoutItemUser"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="?selectableItemBackground"
android:orientation="vertical"
android:paddingTop="@dimen/_7sdp"
android:paddingBottom="@dimen/_7sdp">

<com.proto.type.base.ui.widget.CircularImageView
    android:id="@+id/civAvatar"
    android:layout_width="@dimen/_44sdp"
    android:layout_height="@dimen/_44sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_group" />

<ImageView
    android:id="@+id/ivOnlineIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_online"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="@+id/civAvatar"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toEndOf="@+id/civAvatar"
    tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvUserName"
        style="@style/TextViewChatTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="clip_horizontal"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/tvUserLastSeen"
        app:layout_constraintEnd_toStartOf="@+id/textViewAdmin"
        app:layout_constraintStart_toEndOf="@+id/civAvatar"
        app:layout_constraintTop_toTopOf="@+id/civAvatar"
        tools:text="User's name" />

    <TextView
        android:id="@+id/tvUserLastSeen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/civAvatar"
        app:layout_constraintEnd_toStartOf="@+id/textViewAdmin"
        app:layout_constraintStart_toEndOf="@+id/civAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        tools:text="Online Status" />

    <TextView
        android:id="@+id/textViewAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Role"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>