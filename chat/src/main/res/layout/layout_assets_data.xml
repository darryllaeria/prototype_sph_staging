                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginEnd="@dimen/screen_padding"
                android:text="@string/_52w_l"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewAvgVolValue"
                app:layout_constraintTop_toBottomOf="@+id/textViewWH" />


            <TextView
                android:id="@+id/textViewLow"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/low"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewLowValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewHigh" />

            <TextView
                android:id="@+id/textViewLowValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"

                app:layout_constraintEnd_toStartOf="@+id/textViewMktCap"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewLow"
                app:layout_constraintTop_toBottomOf="@+id/textViewHigh"
                tools:text="1500.25" />


            <TextView
                android:id="@+id/textViewMktCap"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/_52w_high"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewMktCapValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewLowValue"
                app:layout_constraintTop_toBottomOf="@+id/textViewHigh" />

            <TextView
                android:id="@+id/textViewMktCapValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="end"
                android:paddingEnd="@dimen/screen_padding"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewEPS"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewMktCap"
                app:layout_constraintTop_toBottomOf="@+id/textViewHigh"
                tools:text="1500.25" />

            <TextView
                android:id="@+id/textViewEPS"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginEnd="@dimen/screen_padding"
                android:text="@string/eps"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewMktCapValue"
                app:layout_constraintTop_toBottomOf="@+id/textViewWL" />

            <TextView
                android:id="@+id/textViewClose"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/close"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewCloseValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewLowValue" />

            <TextView
                android:id="@+id/textViewCloseValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewPE"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewClose"
                app:layout_constraintTop_toBottomOf="@+id/textViewLowValue"
                tools:text="1500.25" />


            <TextView
                android:id="@+id/textViewPE"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/_52w_low"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewPEValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewCloseValue"
                app:layout_constraintTop_toBottomOf="@+id/textViewLowValue" />

            <TextView
                android:id="@+id/textViewPEValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="end"
                android:paddingEnd="@dimen/screen_padding"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"

                app:layout_constraintEnd_toStartOf="@+id/textViewYield"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewPE"
                app:layout_constraintTop_toBottomOf="@+id/textViewLowValue"
                tools:text="1500.25" />


            <TextView
                android:id="@+id/textViewYield"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginEnd="@dimen/screen_padding"
                android:text="@string/yield"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewPEValue"
                app:layout_constraintTop_toBottomOf="@+id/textViewEPS" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ccNetworkStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ccState">


            <TextView
                android:id="@+id/textViewNetworkStatus"
                style="@style/TextViewHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:text="Network Status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/networkStatusViewLine"
                style="@style/TextViewHeading"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginEnd="@dimen/screen_padding"
                android:text="@string/stats"
                app:layout_constraintBottom_toBottomOf="@+id/textViewNetworkStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewNetworkStatus" />


            <TextView
                android:id="@+id/textViewNodes"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:text="Nodes"
                android:textAllCaps="true"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNetworkStatus" />


            <TextView
                android:id="@+id/textViewTotal"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="end"
                android:text="Nodes"
                android:textAllCaps="true"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewTotalValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewNodes"
                app:layout_constraintTop_toBottomOf="@+id/textViewNetworkStatus" />


            <TextView
                android:id="@+id/textViewTotalValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginEnd="@dimen/screen_padding"
                android:gravity="end"
                android:text="1500.25"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewTotal"
                app:layout_constraintTop_toBottomOf="@+id/textViewNetworkStatus" />


            <TextView
                android:id="@+id/textViewIPV4"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="end"
                android:text="IPv4"
                android:textAllCaps="true"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewIPV4Value"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewNodes"
                app:layout_constraintTop_toBottomOf="@+id/textViewTotal" />


            <TextView
                android:id="@+id/textViewIPV4Value"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginEnd="@dimen/screen_padding"
                android:gravity="end"
                android:text="1500.25"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewIPV4"
                app:layout_constraintTop_toBottomOf="@+id/textViewTotal" />


            <TextView
                android:id="@+id/textViewIPV6"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="end"
                android:text="IPv6"
                android:textAllCaps="true"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewIPV4Value"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewNodes"
                app:layout_constraintTop_toBottomOf="@+id/textViewIPV4" />


            <TextView
                android:id="@+id/textViewIPV6Value"
