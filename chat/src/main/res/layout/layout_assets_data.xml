<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_60sdp"
    android:background="@drawable/bg_corner_white"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/screen_padding">

        <TextView
            android:id="@+id/textViewChart"
            style="@style/TextViewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_padding"
            android:layout_marginTop="@dimen/_95sdp"
            android:text="@string/chart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@color/gray_divider"
            app:layout_constraintTop_toBottomOf="@+id/textViewChart" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/screen_padding"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginEnd="@dimen/screen_padding"
            android:elevation="@dimen/zero_dp"
            app:layout_constraintTop_toBottomOf="@+id/chart"
            app:tabBackground="@drawable/chart_tab_bg_selector"
            app:tabGravity="fill"
            app:tabIndicator="@color/transparent"
            app:tabIndicatorHeight="@dimen/zero_dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/black_sub_title">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1d" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1w" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1m" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1y" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all" />

        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:id="@+id/textViewShareToChat"
            style="@style/TextViewChatSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:text="@string/share_to_chat"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_l1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout" />


        <TextView
            android:id="@+id/textViewStats"
            style="@style/TextViewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_padding"
            android:layout_marginTop="@dimen/common_margin"
            android:text="@string/stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewShareToChat" />


        <View
            android:id="@+id/viewLine"
            style="@style/TextViewHeading"
            android:layout_width="@dimen/match_constraints"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginEnd="@dimen/screen_padding"
            android:text="@string/stats"
            app:layout_constraintBottom_toBottomOf="@+id/textViewStats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewStats" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ccState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/viewLine">


            <TextView
                android:id="@+id/textViewOpen"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/open"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewOpenValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewOpenValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewVolume"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewOpen"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1500.25" />

            <TextView
                android:id="@+id/textViewVolume"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/volume_24h"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewVolumeValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewOpenValue"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewVolumeValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="end"
                android:paddingEnd="@dimen/screen_padding"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewWH"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewVolume"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1500.25" />

            <TextView
                android:id="@+id/textViewWH"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginEnd="@dimen/screen_padding"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewVolumeValue"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="52W H" />


            <TextView
                android:id="@+id/textViewHigh"
