                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/high"
                android:textColor="@color/black_sub_title"
                android:textSize="@dimen/text_size_l1"
                app:layout_constraintEnd_toStartOf="@+id/textViewHighValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOpen" />

            <TextView
                android:id="@+id/textViewHighValue"
                style="@style/TextViewDialogMenu"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
