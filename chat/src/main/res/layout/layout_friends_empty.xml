<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/newChatFriendsEmpty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvUsersCount"
    app:layout_constraintVertical_bias="0.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivNewChatFriendsEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/ic_empty_inbox" />

    <TextView
        android:id="@+id/tvNewChatFriendsEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_msg_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivNewChatFriendsEmpty"
        app:layout_constraintStart_toStartOf="@+id/ivNewChatFriendsEmpty"
        app:layout_constraintTop_toBottomOf="@+id/ivNewChatFriendsEmpty"
        app:layout_constraintVertical_bias="0.20999998" />
</androidx.constraintlayout.widget.ConstraintLayout>