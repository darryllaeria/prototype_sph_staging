<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.proto.type.base.ui.widget.CircularImageView
            android:id="@+id/ivAvatar3"
            android:layout_width="@dimen/inbox_image_size"
            android:layout_height="@dimen/inbox_image_size"
            android:layout_marginStart="@dimen/_45sdp"
            android:visibility="invisible"
            app:civ_border_color="@color/txt_white"
            app:civ_border_width="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar_k_o" />

        <com.proto.type.base.ui.widget.CircularImageView
            android:id="@+id/ivAvatar2"
            android:layout_width="@dimen/inbox_image_size"
            android:layout_height="@dimen/inbox_image_size"
            android:layout_marginStart="@dimen/_45sdp"
            android:visibility="invisible"
            app:civ_border_color="@color/txt_white"
            app:civ_border_width="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@id/ivAvatar1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="@dimen/zero_dp"
            app:srcCompat="@drawable/ic_avatar_f_j" />

        <com.proto.type.base.ui.widget.CircularImageView
            android:id="@+id/ivAvatar1"
            android:layout_width="@dimen/inbox_image_size"
            android:layout_height="@dimen/inbox_image_size"
            android:visibility="invisible"
            app:civ_border_color="@color/txt_white"
            app:civ_border_width="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar_a_e" />

        <TextView
            android:id="@+id/tvExtraMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/_18ssp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/ivAvatar3"
            app:layout_constraintEnd_toEndOf="@+id/ivAvatar3"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar3"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar3"
            tools:text="+2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:fontFamily="@font/roboto_bold"
        android:singleLine="true"
        android:textColor="@color/black_heading"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clUsers"
        tools:text="BC Group" />

    <TextView
        android:id="@+id/tvMemberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true"
        android:textColor="@color/black_sub_title"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupName"
        tools:text="3 Members" />

</androidx.constraintlayout.widget.ConstraintLayout>
