<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp"
    android:paddingEnd="@dimen/chat_item_padding"
    tools:ignore="RtlSymmetry">

    <com.proto.type.base.ui.widget.CircularImageView
        android:id="@+id/civAvatar"
        android:layout_width="@dimen/chat_avatar_size"
        android:layout_height="@dimen/chat_avatar_size"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/common_margin"
        android:src="@drawable/ic_avatar_a_e"
        app:civ_border_width="@dimen/zero_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvUserName"
        style="@style/TextViewHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="clip_horizontal"
        app:layout_constraintStart_toEndOf="@id/civAvatar"
        app:layout_constraintTop_toTopOf="@id/civAvatar"
        android:singleLine="true"
        android:textSize="@dimen/_13ssp"
        tools:text="User name" />

    <com.proto.type.base.ui.widget.CustomRoundedImageView
        android:id="@+id/ivChatImageLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/chat_hint"
        android:minWidth="@dimen/match_constraints"
        android:minHeight="@dimen/match_constraints"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:srcCompat="@drawable/img_placeholder" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/TextViewChatSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="clip_horizontal"
        android:textColor="@color/gray_inbox_date"
        android:textSize="@dimen/text_size_l1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintTop_toBottomOf="@id/ivChatImageLeft"
        tools:text="2 Days Ago" />

    <ProgressBar
        android:id="@+id/pbImageLoad"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        app:layout_constraintBottom_toTopOf="@+id/tvDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />
</androidx.constraintlayout.widget.ConstraintLayout>