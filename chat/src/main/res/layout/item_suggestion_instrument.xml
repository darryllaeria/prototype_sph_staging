<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_36sdp"
    android:id="@+id/layoutItemView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvInstrumentId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/blue_link"
        android:textSize="@dimen/text_size_l2"
        android:text="BTC_USD"
        android:gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <View
        android:id="@+id/separatorView"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="#11111110"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvInstrumentId"
        app:layout_constraintEnd_toStartOf="@id/tvInstrumentName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tvInstrumentName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/gray_heading"
        android:textSize="@dimen/text_size_l2"
        android:text="Bitcoin (US Dollar)"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintStart_toEndOf="@id/separatorView"
        app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>