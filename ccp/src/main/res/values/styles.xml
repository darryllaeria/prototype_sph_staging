<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Select country dialog theme-->
    <style name="SelectCountryDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="actionBarStyle">@style/Theme.AppCompat</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--TextView basic styles-->
    <style name="TextViewHeading">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black_heading</item>
    </style>

    <!--EdiText basic styles-->
    <style name="SearchEditText">
        <item name="android:background">@null</item>
        <item name="android:ems">15</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black_title</item>
        <item name="android:textCursorDrawable">@color/black_title</item>
        <item name="android:textColorHint">@color/gray_placeholder</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>