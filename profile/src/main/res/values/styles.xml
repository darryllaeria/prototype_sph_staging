<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextProfileName">
        <item name="android:lineSpacingExtra">0.15sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black_heading</item>
    </style>

    <style name="TextEditProfile">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">0.15sp</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/blue_link</item>
    </style>

    <style name="TextProfileHeading">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/light_gray_value</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextProfileTitle">
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_heading</item>
    </style>

    <style name="TextProfileValue">
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/light_gray_value</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Customize widgets -->
    <declare-styleable name="ItemProfileView">
        <attr name="ipv_icon" format="reference"/>
        <attr name="ipv_title" format="string"/>
        <attr name="ipv_value" format="string"/>
        <attr name="ipv_hint" format="string"/>
        <attr name="ipv_show_arrow" format="boolean"/>
        <attr name="ipv_show_divider" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ProfileNameView">
        <attr name="pnv_value" format="string"/>
    </declare-styleable>

    <declare-styleable name="ItemToggleView">
        <attr name="itv_key" format="string"/>
        <attr name="itv_desc" format="string"/>
    </declare-styleable>

    <style name="ChatQSwitch">
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/gray</item>
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:thumbTint">@color/colorPrimaryDark</item>
        <item name="android:trackTint">@color/colorPrimary</item>
    </style>

    <style name="AuthSignupForm">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_l4</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black_title</item>
        <item name="android:selectable">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:paddingEnd">@dimen/zero_dp</item>
        <item name="android:textColorHint">@color/gray_time_title</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>

    <style name="ProfileMessage">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_l3</item>
        <item name="android:textColor">@color/gray_heading</item>
    </style>

    <style name="ProfileHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:textSize">@dimen/text_size_l6</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ProfileDescription">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/text_size_l1</item>
        <item name="android:textColor">@color/txt_white_lighter</item>
    </style>

    <style name="ProfileSubDescription">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_l1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/gray_time_title</item>
    </style>

    <style name="ProfileTerm">
        <item name="android:textColor">@color/black_heading</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_l1</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ProfileButton">
        <item name="android:background">@drawable/bg_app_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_l3</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
    </style>

    <style name="ProfileTextButton">
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:textSize">@dimen/text_size_l4</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ProfileTextError">
        <item name="android:textColor">@color/txt_error</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/text_size_l1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>